# NetworkNeuron Configuration

# Node Configuration
NODE_PORT=3000
NODE_HOST=0.0.0.0
NODE_NAME=NetworkNeuron-Node
NODE_REGION=auto

# Network Configuration
BOOTSTRAP_NODES=[]  # JSON array of bootstrap node addresses
MAX_PEERS=50
MIN_PEERS=5
CONNECTION_TIMEOUT=30000

# Security Configuration
ENCRYPTION_ALGORITHM=chacha20-poly1305
KEY_SIZE=256
HANDSHAKE_TIMEOUT=10000

# Bandwidth Configuration
MAX_BANDWIDTH_MBPS=1000
MIN_BANDWIDTH_MBPS=1
BANDWIDTH_CHECK_INTERVAL=60000

# Incentive Configuration
REWARD_TOKEN=NNR  # NetworkNeuron Reward Token
MIN_STAKE=1000
REWARD_RATE=0.1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=networkneuron.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Client Configuration
CLIENT_PORT=8080
CLIENT_TIMEOUT=30000
AUTO_RECONNECT=true
MAX_RETRIES=5

# Development Configuration
DEBUG=false
DEV_MODE=false
TEST_NETWORK=false
